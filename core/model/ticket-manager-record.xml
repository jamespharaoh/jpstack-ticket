<record
	name="ticket-manager"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

	</fields>

	<collections>

		<children-collection
			type="ticket-field-type"/>

		<children-collection
			type="ticket-template"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a ticket manager"
			template="yes"/>

	</priv-types>

</record>
