<record
	name="ticket-field-type"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="ticket-manager"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<yes-no-field
			name="required"/>

		<enum-field
			name="data-type"
			type="ticket-field-data-type"/>

		<reference-field
			type="object-type"
			nullable="yes"/>

		<yes-no-field
			name="visible"/>

	</fields>

</record>