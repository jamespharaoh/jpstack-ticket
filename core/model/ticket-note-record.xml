<record
	name="ticket-note"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="ticket"
			cacheable="yes"/>

		<index-field
			counter="num-notes"
			cacheable="yes"/>

		<!-- data -->

		<string-field
			name="note-text"/>

	</fields>

</record>