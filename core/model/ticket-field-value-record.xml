<record
	name="ticket-field-value"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="ticket"/>

		<identity-reference-field
			type="ticket-field-type"/>

		<!-- details -->

		<string-field
			name="string-value"
			nullable="yes"/>

		<integer-field
			name="integer-value"
			nullable="yes"/>

		<yes-no-field
			name="boolean-value"
			nullable="yes"/>

	</fields>

</record>