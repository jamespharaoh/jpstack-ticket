<record
	name="ticket-template"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="ticket-manager"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			type="ticket-state"
			nullable="yes"/>

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

	</fields>

</record>