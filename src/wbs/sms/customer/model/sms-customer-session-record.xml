<record
	name="smsCustomerSession"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			name="customer"
			type="smsCustomer"
			cacheable="yes"/>

		<index-field
			cacheable="yes"/>

		<timestamp-field
			name="startTime"
			column-type="iso"/>

		<!-- data -->

		<timestamp-field
			name="endTime"
			column-type="iso"
			nullable="yes"/>

		<reference-field
			name="welcomeMessage"
			type="message"
			nullable="yes"/>

		<reference-field
			name="warningMessage"
			type="message"
			nullable="yes"/>

		<reference-field
			name="stopMessage"
			type="message"
			nullable="yes"/>

	</fields>

</record>