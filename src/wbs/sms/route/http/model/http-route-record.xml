<record
	name="httpRoute"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="route"
			column="routeid"/>

		<!-- data -->

		<reference-field
			type="network"
			column="networkid"/>

		<!-- settings -->

		<yes-no-field
			name="post"/>

		<string-field
			name="url"/>

		<string-field
			name="params"/>

		<string-field
			name="successRegex"
			column="successregex"/>

		<string-field
			name="temporaryFailureRegex"
			column="tempfailureregex"/>

		<string-field
			name="permanentFailureRegex"
			column="permfailureregex"/>

		<string-field
			name="dailyFailureRegex"
			column="dailyfailureregex"/>

		<string-field
			name="creditFailureRegex"
			column="creditfailureregex"/>

		<string-field
			name="paramEncoding"/>

	</fields>

	<senders>

		<sender
			name="HTTP"
			description="HTTP SMS sender"/>

	</senders>

</record>