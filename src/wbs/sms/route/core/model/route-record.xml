<record
	name="route"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- data -->

		<string-field
			name="number"
			nullable="yes"/>

		<reference-field
			type="command"
			nullable="yes"/>

		<yes-no-field
			name="canReceive"
			default="no"/>

		<yes-no-field
			name="canSend"
			default="no"/>

		<yes-no-field
			name="deliveryReports"
			default="no"/>

		<integer-field
			name="expirySecs"
			nullable="yes"/>

		<integer-field
			name="inCharge"
			default="0"/>

		<integer-field
			name="outCharge"
			default="0"/>

		<reference-field
			type="sender"
			nullable="yes"/>

		<integer-field
			name="maxTries"
			nullable="yes"/>

		<yes-no-field
			name="avRequired"
			default="no"/>

		<yes-no-field
			name="inboundImpliesAdult"
			default="no"/>

		<enum-field
			name="networkBehaviour"
			type="routeNetworkBehaviour"
			default="alwaysUpdate"/>

		<reference-field
			type="currency"
			nullable="yes"/>

		<reference-field
			name="blockNumberLookup"
			type="numberLookup"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-collection
			name="inboundMessageTypes"
			type="messageType"
			table="route_message_type"
			where-sql="direction = 0"/>

		<associative-collection
			name="outboundMessageTypes"
			type="messageType"
			table="route_message_type"
			where-sql="direction = 1"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a route"
			template="yes"/>

		<priv-type
			name="Messages"
			description="View message history for a route"
			template="yes"/>

		<priv-type
			name="Stats"
			description="View message statistics for a route"
			template="yes"/>

		<!-- slice -->

		<priv-type
			subject="slice"
			name="Route create"
			description="Create new routes in a slice"
			template="yes"/>

	</priv-types>

	<queue-types>

		<queue-type
			name="Not processed"
			description="Inbound messages which were unable to be processed for a route"
			subject="number"
			ref="message"
			preferred-user-delay="0"
			supervisor-priv="this:supervisor"/>

	</queue-types>

</record>
