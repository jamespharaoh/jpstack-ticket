<record
	name="routeTester"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			type="route"/>

		<string-field
			name="routeNumber"/>

		<string-field
			name="destNumber"/>

		<string-field
			name="destKeyword"/>

		<integer-field
			name="intervalSecs"/>

		<!-- state -->

		<timestamp-field
			name="lastTest"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<command-types>

		<command-type
			subject="root"
			name="Route tester response"
			description="Process the inbound message for a route tester"/>

	</command-types>

	<service-types>

		<!-- root -->

		<service-type
			subject="root"
			name="Test"
			description="Route tester service"/>

	</service-types>

</record>
