<record
	name="inbox"
	type="ephemeral">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="message"/>

		<!-- identity -->

		<master-field
			type="message"/>

		<!-- data -->

		<reference-field
			name="route"
			type="route"/>

		<!-- statistics -->

		<timestamp-field
			name="createdTime"
			column-type="iso"/>

		<timestamp-field
			name="processedTime"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="lastAttempt"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="numAttempts"
			default="0"/>

		<!-- state -->

		<enum-field
			name="state"
			type="inboxState"/>

		<timestamp-field
			name="nextAttempt"
			column-type="iso"
			nullable="yes"/>

		<string-field
			name="statusMessage"
			nullable="yes"/>

	</fields>

	<priv-types>

		<!-- root -->

		<priv-type
			subject="root"
			name="Inbox view"
			description="View SMS messages in the inbox"
			template="yes"/>

		<!-- slice -->

		<priv-type
			subject="slice"
			name="Inbox view"
			description="View SMS messages in the inbox for this slice"
			template="yes"/>

	</priv-types>

</record>