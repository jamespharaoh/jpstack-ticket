<record
	name="outbox"
	type="ephemeral">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="message"/>

		<!-- identity -->

		<master-field
			type="message"/>

		<!-- data -->

		<reference-field
			type="route"/>

		<timestamp-field
			name="createdTime"
			column-type="postgresql"/>

		<integer-field
			name="pri"
			default="0"/>

		<!-- state -->

		<timestamp-field
			name="retryTime"
			column-type="postgresql"/>

		<integer-field
			name="tries"
			default="0"/>

		<integer-field
			name="remainingTries"
			nullable="yes"/>

		<string-field
			name="error"
			nullable="yes"/>

		<yes-no-field
			name="dailyFailure"
			default="no"/>

		<timestamp-field
			name="sending"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

	<background-processes>

		<background-process
			object-type="outbox"
			name="Unstick"
			description="Unstick outboxes which have been sending for a long time"
			frequency="10 seconds"/>

	</background-processes>

	<priv-types>

		<priv-type
			subject="root"
			name="Outbox view"
			description="View outbox messages waiting to be sent"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Outbox view"
			description="View outbox messages waiting to be sent"
			template="yes"/>

	</priv-types>

	<event-types>

		<event-type
			name="SMS outbox cancelled"
			text="%0 cancelled %1"
			admin="no"/>

		<event-type
			name="SMS outbox retried"
			text="%0 retried %1"
			admin="no"/>

	</event-types>

</record>
