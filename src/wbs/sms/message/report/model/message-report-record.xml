<record
	name="messageReport"
	type="event">

	<!-- TODO this is horrible -->

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="message"/>

		<timestamp-field
			name="receivedTime"
			column-type="postgresql"/>

		<!-- data -->

		<enum-field
			name="newMessageStatus"
			type="messageStatus"/>

		<reference-field
			name="theirCode"
			type="text"
			column="code"
			nullable="yes"/>

		<reference-field
			name="theirDescription"
			type="text"
			nullable="yes"/>

		<reference-field
			name="extraInformation"
			type="text"
			nullable="yes"/>

		<timestamp-field
			name="theirTimestamp"
			column-type="postgresql"
			nullable="yes"/>

	</fields>

</record>