<record
	name="messageType"
	type="type">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<code-field/>

		<!-- details -->

		<description-field/>

	</fields>

	<collections>

		<associative-collection
			name="inboundRoutes"
			type="route"
			table="route_message_type"
			where-sql="direction = 0"/>

		<associative-collection
			name="outboundRoutes"
			type="route"
			table="route_message_type"
			where-sql="direction = 1"/>

	</collections>

</record>