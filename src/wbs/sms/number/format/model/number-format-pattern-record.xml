<record
	name="numberFormatPattern"
	type="ephemeral">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="numberFormat"
			cacheable="yes"/>

		<index-field/>

		<!-- details -->

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="inputPrefix"/>

		<string-field
			name="outputPrefix"/>

		<integer-field
			name="minimumLength"/>

		<integer-field
			name="maximumLength"/>

	</fields>

</record>