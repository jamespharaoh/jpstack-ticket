<record
	name="chatUserNumberReport"
	type="minor">

	<!-- TODO this should /not/ be here!!! -->

	<fields>

		<!-- id -->

		<foreign-id-field
			field="number"/>

		<!-- identity -->

		<master-field
			type="number"/>

		<!-- data -->

		<timestamp-field
			name="lastSuccess"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="firstFailure"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="permanentFailureReceived"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="permanentFailureCount"
			default="0"/>

	</fields>

</record>