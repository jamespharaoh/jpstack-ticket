<record
	name="smsSpendLimiterNumberDay"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="smsSpendLimiterNumber"/>

		<identity-date-field
			name="date"/>

		<!-- data -->

		<integer-field
			name="totalSpent"/>

		<integer-field
			name="adviceSpent"/>

		<yes-no-field
			name="limitSent"/>

		<reference-field
			name="limitMessage"
			type="message"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-collection
			name="spendMessages"
			type="message"
			table="sms_spend_limiter_number_day_spend_message"
			owned="yes"/>

		<associative-collection
			name="adviceMessages"
			type="message"
			table="sms_spend_limiter_number_day_advice_message"
			owned="yes"/>

	</collections>

</record>
