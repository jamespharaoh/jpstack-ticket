<record
	name="smsSpendLimiterNumber"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="smsSpendLimiter"/>

		<identity-reference-field
			type="number"/>

		<!-- data -->

		<integer-field
			name="totalSpent"/>

		<integer-field
			name="adviceSpent"/>

		<date-field
			name="lastSpendDate"
			nullable="yes"/>

		<integer-field
			name="lastDailySpend"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-collection
			name="spendMessages"
			type="message"
			table="sms_spend_limiter_number_spend_message"
			owned="yes"/>

		<associative-collection
			name="adviceMessages"
			type="message"
			table="sms_spend_limiter_number_advice_message"
			owned="yes"/>

	</collections>

</record>
