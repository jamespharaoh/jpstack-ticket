<record
	name="message"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<timestamp-field
			name="createdTime"
			column-type="postgresql"/>

		<!-- data -->

		<integer-field
			name="threadId"
			column="thread_message_id"/>

		<string-field
			name="otherId"
			nullable="yes"/>

		<reference-field
			type="text"/>

		<string-field
			name="numFrom"/>

		<string-field
			name="numTo"/>

		<enum-field
			name="direction"
			type="messageDirection"/>

		<enum-field
			name="status"
			type="messageStatus"/>

		<reference-field
			type="number"/>

		<reference-field
			type="route"/>

		<reference-field
			type="service"/>

		<reference-field
			type="network"/>

		<reference-field
			type="batch"/>

		<reference-field
			type="affiliate"/>

		<date-field
			name="date"/>

		<timestamp-field
			name="processedTime"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="networkTime"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="charge"/>

		<integer-field
			name="pri"
			default="0"/>

		<reference-field
			type="deliveryType"
			nullable="yes"/>

		<reference-field
			name="subjectText"
			type="text"
			nullable="yes"/>

		<integer-field
			name="ref"
			nullable="yes"/>

		<reference-field
			type="messageType"/>

		<reference-field
			type="user"
			nullable="yes"/>

		<reference-field
			type="command"
			nullable="yes"/>

		<!-- TODO why is this a string???? -->
		<string-field
			name="adultVerified"
			nullable="yes"/>

		<integer-field
			name="numAttempts"
			nullable="yes"/>

		<reference-field
			name="notProcessedQueueItem"
			type="queueItem"
			nullable="yes"/>

	</fields>

	<collections>

		<associative-list
			type="media"
			index-column="i"
			table="message_media"
			owned="yes"/>

		<children-collection
			name="reports"
			type="messageReport"/>

		<associative-collection
			name="tags"
			type="string"
			table="message_tag"
			value-column="tag"
			owned="yes"/>

		<children-collection
			name="multipartCompanionLinks"
			type="smsOutboxMultipartLink"
			join-column="main_message_id"/>

	</collections>

	<priv-types>

		<!-- root -->

		<priv-type
			subject="root"
			name="Message notprocessed view"
			description="View messages which were not able to be processed correctly"
			template="yes"/>

		<priv-type
			subject="root"
			name="Messages"
			description="View all message history"
			template="yes"/>

		<priv-type
			subject="root"
			name="Stats"
			description="View all message statistics"
			template="yes"/>

		<!-- slice -->

		<priv-type
			subject="slice"
			name="Messages"
			description="View message history for a slice"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Stats"
			description="View message statistics for a slice"
			template="yes"/>

		<priv-type
			subject="slice"
			name="SMS outbox view"
			description="View SMS messages in the outbox for a slice"
			template="yes"/>

		<priv-type
			subject="slice"
			name="SMS inbox view"
			description="View SMS messages in the inbox for a slice"
			template="yes"/>

	</priv-types>

	<event-types>

		<event-type
			name="Message manually undelivered"
			text="%0 manually undelivered %1"
			admin="no"/>

		<event-type
			name="Message manually delivered"
			text="%0 manually delivered %1"
			admin="no"/>

		<event-type
			name="Message manually unheld"
			text="%0 manually unheld %1"
			admin="no"/>

		<event-type
			name="Message manually retried"
			text="%0 manually retried %1"
			admin="no"/>

		<event-type
			name="Message manually processed"
			text="%0 manually processed %1"
			admin="no"/>

		<event-type
			name="Message ignored"
			text="%0 ignored %1"
			admin="no"/>

		<event-type
			name="Message processed again"
			text="%0 processed %1 again"
			admin="no"/>

	</event-types>

</record>
