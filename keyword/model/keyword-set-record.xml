<record
	name="keywordSet"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<enum-field
			name="type"
			type="keywordSetType"/>

		<reference-field
			name="fallbackCommand"
			type="command"
			nullable="yes"/>

		<integer-field
			name="fallbackTimeout"
			nullable="yes"/>

	</fields>

	<collections>

		<children-mapping
			name="keywords"
			type="keyword"
			map-column="keyword"
			map-type="string"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a keyword set"
			template="yes"/>

	</priv-types>

	<command-types>

		<command-type
			name="Default"
			description="Process message according to a keyword set"/>

	</command-types>

</record>
