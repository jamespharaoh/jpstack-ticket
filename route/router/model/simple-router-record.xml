<record
	name="simpleRouter"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			type="route"/>

	</fields>

	<router-types>

		<router-type
			name="Default"
			description="Send via the currently configured route"/>

	</router-types>

</record>