<record
	name="router"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-type-field
			column="parent_object_type_id"/>

		<parent-id-field
			column="parent_object_id"/>

		<code-field/>

		<!-- details -->

		<type-field/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a router"
			template="yes"/>

	</priv-types>

	<router-types>

		<!-- route -->

		<router-type
			subject="route"
			name="Static"
			description="Always send via a specific route"/>

	</router-types>

</record>
