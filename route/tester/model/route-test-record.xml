<record
	name="routeTest"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="routeTester"/>

		<!-- TODO index -->

		<timestamp-field
			name="sentTime"
			column-type="postgresql"/>

		<!-- data -->

		<reference-field
			type="route"/>

		<reference-field
			name="sentMessage"
			type="message"/>

		<timestamp-field
			name="returnedTime"
			column-type="postgresql"
			nullable="yes"/>

		<reference-field
			name="returnedMessage"
			type="message"
			nullable="yes"/>

	</fields>

</record>
