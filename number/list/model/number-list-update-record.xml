<record
	name="numberListUpdate"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="numberList"/>

		<!-- TODO index -->

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

		<!-- data -->

		<reference-field
			type="user"
			nullable="yes"/>

		<reference-field
			type="service"
			nullable="yes"/>

		<reference-field
			type="message"
			nullable="yes"/>

		<yes-no-field
			name="present"/>

		<integer-field
			name="numberCount"/>

	</fields>

	<collections>

		<associative-collection
			type="number"
			table="number_list_update_number"
			owned="yes"/>

	</collections>

</record>