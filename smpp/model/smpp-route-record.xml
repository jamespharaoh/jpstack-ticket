<record
	name="smppRoute"
	type="major">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="route"/>

		<!-- identity -->

		<master-field
			type="route"/>

		<!-- settings -->

		<string-field
			name="connectHostname"/>

		<integer-field
			name="connectPort"/>

		<string-field
			name="bindSystemId"/>

		<string-field
			name="bindPassword"/>

	</fields>

</record>
